{
  "compilerOptions": {
    "target": "ESNext",              // JavaScript version for output
    "module": "CommonJS",            // Module system used in Node.js
    "rootDir": "./src",              // Location of TypeScript source files
    "outDir": "./dist",              // Output directory for compiled files
    "strict": true,                  // Enable all strict type-checking options
    "esModuleInterop": true,         // Allow compatibility with ES6 modules
    "skipLibCheck": true,            // Skip type checks on declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent file naming
    "resolveJsonModule": true,       // Allow importing `.json` files
    "typeRoots": ["./node_modules/@types"],
    "strictNullChecks": true, // Ensures null and undefined are explicitly handled
    "noImplicitReturns": true, // Requires functions to return a value explicitly
    "noFallthroughCasesInSwitch": true // Ensures `switch` cases have `break` statements // Look for type definitions here
  },
  "include": ["src/**/*", "node_modules/@prisma/client"],           // Files to include
  "exclude": ["node_modules", "dist"] // Files to exclude
}
